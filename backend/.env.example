SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
GEMINI_API_KEY=your-gemini-api-key-here
FRONTEND_URL=http://localhost:3000

# CORS Configuration
# Set to 'true' to allow requests from any domain (useful for separate domain deployment)
# Set to 'false' to only allow requests from FRONTEND_URL and localhost:3000
# Default: false (more secure)
ALLOW_ALL_ORIGINS=false

# Optional: Google Cloud credentials for Text-to-Speech
# If not set, will use Application Default Credentials (ADC)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
